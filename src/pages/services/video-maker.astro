    // Charles Choice Sunset Sounds
    'nl06dW_KF_o?si=ybmOB_FH5wPEKJdE',
];


const pageTitle = "Video maker";
---
<BaseLayout>
    <div class="servicio-header">
        <h1>Este es la página del <strong> {pageTitle}</strong></h1>
        <span><a href="/#servicios">Volver a servicios</a></span>
    </div>
    <div class="container mx-auto p-4">
      <h1 class="text-3xl font-bold mb-6">Galería de Videos</h1>
      <div class="flex flex-col md:flex-row items-center md:space-x-8 mb-4">
        <!-- Imagen -->
        <div class="md:w-1/3 mb-8 md:mb-0">
          <img class="rounded-lg" src="/filming.jpeg"/>

        </div>
        <p>Principalmente he colaborado con músicos y músicas haciendo videoclips, además video de editorial, video arte y teasers de servicios.</p>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-2 gap-4">
        {videos.map((videoId, index) => (
          <div class="overflow-hidden rounded-lg shadow-lg cursor-pointer">
            <iframe
              src=`https://www.youtube.com/embed/${videoId}`
              title="YouTube video player"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin"
              allowfullscreen>
            </iframe>
          </div>
        ))}
      </div>
    </div>

</BaseLayout>

<style>
    .servicio-header {
        display: flex;
        justify-content: space-between;
        & a {
            text-decoration: underline;
        }
    }

    iframe {
      width: 100%;
      height: 350px;
    }
</style>