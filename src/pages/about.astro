---
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "Sobre mi";

const identity = {
  firstName: "Josefina",
  avatar: '/yoenniebla.jpg',
  country: "Chile",
  occupation: "Frontend developer",
  hobbies: ["Animal flow", "Kandyan dance", "Make videos"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Premiere Pro", "Canva"];

// Css variables
const skillColor = "rgba(28, 134, 220, 0.789)";
const fontWeight = "bold"
const textCase = "uppercase"
