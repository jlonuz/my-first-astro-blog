---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPost from '../components/BlogPost.astro';
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card"
const allPosts = await Astro.glob('../pages/posts/*.md');
const pageTitle = "Mis publicaciones recientes"
---
<BaseLayout pageTitle={pageTitle}>
    <ul class="grid gap-4 mt-4 md:grid-cols-2 lg:grid-cols-4">
    {
      allPosts.map((post) =>
        <Card>
          <CardHeader>
            <CardTitle> <BlogPost url={post.url} title={post.frontmatter.title}/></CardTitle>
            <CardDescription>Leer m√°s...</CardDescription>
          </CardHeader>
        </Card>
      )
    }
    </ul>
</BaseLayout>

